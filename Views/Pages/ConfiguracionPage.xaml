<Page x:Class="StreamManager.Views.Pages.ConfiguracionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Configuración">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Grid.Row="0"
                       Text="Configuración del Sistema" 
                       Style="{StaticResource PageTitle}"/>

            <!-- Configuración General -->
            <materialDesign:Card Grid.Row="1"
                                 Margin="0,0,0,24"
                                 Padding="24"
                                 materialDesign:ElevationAssist.Elevation="Dp2">
                <StackPanel>
                    <TextBlock Text="Configuración General"
                              FontSize="18"
                              FontWeight="SemiBold"
                              Margin="0,0,0,20"/>

                    <!-- Nombre de la Empresa -->
                    <TextBox x:Name="NombreEmpresaTextBox"
                            materialDesign:HintAssist.Hint="Nombre de la Empresa"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="StreamManager"
                            Margin="0,0,0,16"/>

                    <!-- Moneda -->
                    <ComboBox x:Name="MonedaComboBox"
                             materialDesign:HintAssist.Hint="Moneda"
                             Style="{StaticResource MaterialDesignOutlinedComboBox}"
                             Margin="0,0,0,16">
                        <ComboBoxItem Content="Lempiras (L)" Tag="HNL" IsSelected="True"/>
                        <ComboBoxItem Content="Dólares ($)" Tag="USD"/>
                        <ComboBoxItem Content="Euros (€)" Tag="EUR"/>
                    </ComboBox>

                    <!-- Idioma -->
                    <ComboBox x:Name="IdiomaComboBox"
                             materialDesign:HintAssist.Hint="Idioma"
                             Style="{StaticResource MaterialDesignOutlinedComboBox}"
                             Margin="0,0,0,16">
                        <ComboBoxItem Content="Español" Tag="es" IsSelected="True"/>
                        <ComboBoxItem Content="English" Tag="en"/>
                    </ComboBox>

                    <!-- Zona Horaria -->
                    <ComboBox x:Name="ZonaHorariaComboBox"
                             materialDesign:HintAssist.Hint="Zona Horaria"
                             Style="{StaticResource MaterialDesignOutlinedComboBox}">
                        <ComboBoxItem Content="(GMT-6) Central America" Tag="America/Tegucigalpa" IsSelected="True"/>
                        <ComboBoxItem Content="(GMT-5) Eastern Time" Tag="America/New_York"/>
                        <ComboBoxItem Content="(GMT-6) Central Time" Tag="America/Chicago"/>
                    </ComboBox>
                </StackPanel>
            </materialDesign:Card>

            <!-- Notificaciones y Alertas -->
            <materialDesign:Card Grid.Row="2"
                                 Margin="0,0,0,24"
                                 Padding="24"
                                 materialDesign:ElevationAssist.Elevation="Dp2">
                <StackPanel>
                    <TextBlock Text="Notificaciones y Alertas"
                              FontSize="18"
                              FontWeight="SemiBold"
                              Margin="0,0,0,20"/>

                    <!-- Alertas de Vencimiento -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Alertas de Vencimiento"
                                      FontSize="14"
                                      FontWeight="SemiBold"/>
                            <TextBlock Text="Notificar X días antes del vencimiento"
                                      FontSize="12"
                                      Opacity="0.7"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                        <TextBox x:Name="DiasAlertaTextBox"
                                Grid.Column="1"
                                Text="3"
                                Width="80"
                                HorizontalContentAlignment="Center"
                                materialDesign:HintAssist.Hint="Días"/>
                    </Grid>

                    <!-- Toggle Switches -->
                    <StackPanel Margin="0,8,0,0">
                        <ToggleButton x:Name="AlertasEmailToggle"
                                     Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                     Margin="0,0,0,16"
                                     IsChecked="True">
                            <ToggleButton.Content>
                                <StackPanel>
                                    <TextBlock Text="Alertas por Email"
                                              FontSize="14"
                                              FontWeight="SemiBold"/>
                                    <TextBlock Text="Enviar notificaciones por correo electrónico"
                                              FontSize="12"
                                              Opacity="0.7"/>
                                </StackPanel>
                            </ToggleButton.Content>
                        </ToggleButton>

                        <ToggleButton x:Name="AlertasSistemaToggle"
                                     Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                     Margin="0,0,0,16"
                                     IsChecked="True">
                            <ToggleButton.Content>
                                <StackPanel>
                                    <TextBlock Text="Alertas del Sistema"
                                              FontSize="14"
                                              FontWeight="SemiBold"/>
                                    <TextBlock Text="Mostrar notificaciones en la aplicación"
                                              FontSize="12"
                                              Opacity="0.7"/>
                                </StackPanel>
                            </ToggleButton.Content>
                        </ToggleButton>

                        <ToggleButton x:Name="AlertasPagosToggle"
                                     Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                     IsChecked="True">
                            <ToggleButton.Content>
                                <StackPanel>
                                    <TextBlock Text="Recordatorios de Pago"
                                              FontSize="14"
                                              FontWeight="SemiBold"/>
                                    <TextBlock Text="Notificar sobre pagos pendientes"
                                              FontSize="12"
                                              Opacity="0.7"/>
                                </StackPanel>
                            </ToggleButton.Content>
                        </ToggleButton>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

            <!-- Respaldo y Seguridad -->
            <materialDesign:Card Grid.Row="3"
                                 Margin="0,0,0,24"
                                 Padding="24"
                                 materialDesign:ElevationAssist.Elevation="Dp2">
                <StackPanel>
                    <TextBlock Text="Respaldo y Seguridad"
                              FontSize="18"
                              FontWeight="SemiBold"
                              Margin="0,0,0,20"/>

                    <!-- Respaldo Automático -->
                    <ToggleButton x:Name="RespaldoAutomaticoToggle"
                                 Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                 Margin="0,0,0,16"
                                 IsChecked="True">
                        <ToggleButton.Content>
                            <StackPanel>
                                <TextBlock Text="Respaldo Automático"
                                          FontSize="14"
                                          FontWeight="SemiBold"/>
                                <TextBlock Text="Realizar respaldo diario de la base de datos"
                                          FontSize="12"
                                          Opacity="0.7"/>
                            </StackPanel>
                        </ToggleButton.Content>
                    </ToggleButton>

                    <!-- Botones de Respaldo -->
                    <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                        <Button x:Name="CrearRespaldoButton"
                               Style="{StaticResource MaterialDesignRaisedButton}"
                               Click="CrearRespaldoButton_Click"
                               Margin="0,0,12,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="DatabaseExport"
                                                        Width="18"
                                                        Height="18"
                                                        VerticalAlignment="Center"/>
                                <TextBlock Text="Crear Respaldo"
                                          Margin="8,0,0,0"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="RestaurarRespaldoButton"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Click="RestaurarRespaldoButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="DatabaseImport"
                                                        Width="18"
                                                        Height="18"
                                                        VerticalAlignment="Center"/>
                                <TextBlock Text="Restaurar Respaldo"
                                          Margin="8,0,0,0"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Último Respaldo -->
                    <Border Background="#F5F5F5"
                           CornerRadius="4"
                           Padding="16"
                           Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="Último Respaldo"
                                      FontSize="12"
                                      FontWeight="SemiBold"
                                      Opacity="0.7"/>
                            <TextBlock x:Name="UltimoRespaldoTextBlock"
                                      Text="No disponible"
                                      FontSize="14"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </materialDesign:Card>

            <!-- Información del Sistema -->
            <materialDesign:Card Grid.Row="4"
                                 Padding="24"
                                 materialDesign:ElevationAssist.Elevation="Dp2">
                <StackPanel>
                    <TextBlock Text="Información del Sistema"
                              FontSize="18"
                              FontWeight="SemiBold"
                              Margin="0,0,0,20"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Versión -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                  Text="Versión:"
                                  FontWeight="SemiBold"
                                  Margin="0,0,16,12"/>
                        <TextBlock Grid.Row="0" Grid.Column="1"
                                  Text="1.0.0"
                                  Margin="0,0,0,12"/>

                        <!-- Base de Datos -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                  Text="Base de Datos:"
                                  FontWeight="SemiBold"
                                  Margin="0,0,16,12"/>
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                  Text="Supabase (PostgreSQL)"
                                  Margin="0,0,0,12"/>

                        <!-- Desarrollado por -->
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                  Text="Desarrollado por:"
                                  FontWeight="SemiBold"
                                  Margin="0,0,16,12"/>
                        <TextBlock Grid.Row="2" Grid.Column="1"
                                  Text="Devio - Marketing Agency"
                                  Margin="0,0,0,12"/>

                        <!-- Licencia -->
                        <TextBlock Grid.Row="3" Grid.Column="0"
                                  Text="Licencia:"
                                  FontWeight="SemiBold"
                                  Margin="0,0,16,12"/>
                        <TextBlock Grid.Row="3" Grid.Column="1"
                                  Text="Propietaria"
                                  Margin="0,0,0,12"/>

                        <!-- Última Actualización -->
                        <TextBlock Grid.Row="4" Grid.Column="0"
                                  Text="Última Actualización:"
                                  FontWeight="SemiBold"
                                  Margin="0,0,16,0"/>
                        <TextBlock Grid.Row="4" Grid.Column="1"
                                  Text="Enero 2026"/>
                    </Grid>

                    <!-- Botón Guardar Configuración -->
                    <Button x:Name="GuardarConfigButton"
                           Style="{StaticResource MaterialDesignRaisedButton}"
                           Click="GuardarConfigButton_Click"
                           HorizontalAlignment="Right"
                           Margin="0,24,0,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave"
                                                    Width="18"
                                                    Height="18"
                                                    VerticalAlignment="Center"/>
                            <TextBlock Text="GUARDAR CONFIGURACIÓN"
                                      Margin="8,0,0,0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </ScrollViewer>
</Page>
