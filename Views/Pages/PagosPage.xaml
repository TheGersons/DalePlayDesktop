<Page x:Class="StreamManager.Views.Pages.PagosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Historial de Pagos">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="Historial de Pagos de Clientes" 
                   FontSize="32"
                   FontWeight="Bold"
                   Margin="0,0,0,8"/>

        <!-- Cards de Resumen -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Recaudado -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,8,0" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="CashMultiple" 
                                                Width="24" Height="24" 
                                                Foreground="#4CAF50"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Total Recaudado" 
                                  FontSize="12" 
                                  Margin="8,0,0,0"
                                  Opacity="0.7"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="TotalRecaudadoTextBlock"
                              Text="L 0.00"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="#4CAF50"/>
                    <TextBlock x:Name="PeriodoRecaudadoTextBlock"
                              Text="Este mes"
                              FontSize="11"
                              Opacity="0.6"
                              Margin="0,4,0,0"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Total Pagos -->
            <materialDesign:Card Grid.Column="1" Margin="0,0,8,0" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="Receipt" 
                                                Width="24" Height="24" 
                                                Foreground="#2196F3"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Total Pagos" 
                                  FontSize="12" 
                                  Margin="8,0,0,0"
                                  Opacity="0.7"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="TotalPagosTextBlock"
                              Text="0"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="#2196F3"/>
                    <TextBlock x:Name="PeriodoPagosTextBlock"
                              Text="Este mes"
                              FontSize="11"
                              Opacity="0.6"
                              Margin="0,4,0,0"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Promedio por Pago -->
            <materialDesign:Card Grid.Column="2" Margin="0,0,8,0" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="ChartLine" 
                                                Width="24" Height="24" 
                                                Foreground="#FF9800"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Promedio" 
                                  FontSize="12" 
                                  Margin="8,0,0,0"
                                  Opacity="0.7"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="PromedioTextBlock"
                              Text="L 0.00"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="#FF9800"/>
                    <TextBlock Text="Por pago"
                              FontSize="11"
                              Opacity="0.6"
                              Margin="0,4,0,0"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Último Pago -->
            <materialDesign:Card Grid.Column="3" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="ClockOutline" 
                                                Width="24" Height="24" 
                                                Foreground="#9C27B0"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Último Pago" 
                                  FontSize="12" 
                                  Margin="8,0,0,0"
                                  Opacity="0.7"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="UltimoPagoMontoTextBlock"
                              Text="L 0.00"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="#9C27B0"/>
                    <TextBlock x:Name="UltimoPagoFechaTextBlock"
                              Text="Hace X horas"
                              FontSize="11"
                              Opacity="0.6"
                              Margin="0,4,0,0"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>

        <!-- Filtros y búsqueda -->
        <Grid Grid.Row="2" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Búsqueda -->
            <TextBox x:Name="BusquedaTextBox"
                    Grid.Column="0"
                    materialDesign:HintAssist.Hint="Buscar por cliente, referencia o monto..."
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    TextChanged="BusquedaTextBox_TextChanged"
                    Margin="0,0,12,0"/>

            <!-- Filtros -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <ComboBox x:Name="MetodoFiltroComboBox"
                         materialDesign:HintAssist.Hint="Método de Pago"
                         Style="{StaticResource MaterialDesignOutlinedComboBox}"
                         Width="150"
                         Margin="0,0,8,0"
                         SelectionChanged="FiltroComboBox_SelectionChanged">
                    <ComboBoxItem Content="Todos" Tag="todos" IsSelected="True"/>
                    <ComboBoxItem Content="Efectivo" Tag="efectivo"/>
                    <ComboBoxItem Content="Transferencia" Tag="transferencia"/>
                    <ComboBoxItem Content="Depósito" Tag="deposito"/>
                    <ComboBoxItem Content="Otro" Tag="otro"/>
                </ComboBox>

                <DatePicker x:Name="FechaInicioDatePicker"
                           materialDesign:HintAssist.Hint="Desde"
                           Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                           Width="140"
                           Margin="0,0,8,0"
                           SelectedDateChanged="FiltroComboBox_SelectionChanged"/>

                <DatePicker x:Name="FechaFinDatePicker"
                           materialDesign:HintAssist.Hint="Hasta"
                           Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                           Width="140"
                           Margin="0,0,8,0"
                           SelectedDateChanged="FiltroComboBox_SelectionChanged"/>

                <Button x:Name="RefrescarButton"
                       Style="{StaticResource MaterialDesignRaisedButton}"
                       Click="RefrescarButton_Click"
                       ToolTip="Refrescar">
                    <materialDesign:PackIcon Kind="Refresh" 
                                            Width="20" 
                                            Height="20"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- DataGrid de Pagos -->
        <materialDesign:Card Grid.Row="3"
                             Padding="0"
                             materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid>
                <DataGrid x:Name="PagosDataGrid"
                         AutoGenerateColumns="False"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False"
                         IsReadOnly="True"
                         SelectionMode="Single"
                         materialDesign:DataGridAssist.CellPadding="8"
                         materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                    <DataGrid.Columns>
                        <!-- Fecha -->
                        <DataGridTextColumn Header="Fecha" 
                                           Binding="{Binding FechaPagoTexto}" 
                                           Width="140"/>
                        
                        <!-- Cliente -->
                        <DataGridTextColumn Header="Cliente" 
                                           Binding="{Binding ClienteNombre}" 
                                           Width="*"/>
                        
                        <!-- Plataforma -->
                        <DataGridTemplateColumn Header="Plataforma" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="{Binding PlataformaColor}"
                                               CornerRadius="4"
                                               Padding="8,4">
                                            <TextBlock Text="{Binding PlataformaNombre}"
                                                      Foreground="White"
                                                      FontSize="11"
                                                      FontWeight="SemiBold"/>
                                        </Border>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Monto -->
                        <DataGridTemplateColumn Header="Monto" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding MontoTexto}"
                                              FontWeight="Bold"
                                              Foreground="#4CAF50"
                                              FontSize="14"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Método de Pago -->
                        <DataGridTemplateColumn Header="Método" Width="130">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="{Binding MetodoIcono}"
                                                                Width="16"
                                                                Height="16"
                                                                VerticalAlignment="Center"
                                                                Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding MetodoPago}"
                                                  VerticalAlignment="Center"
                                                  FontSize="12"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Referencia -->
                        <DataGridTextColumn Header="Referencia" 
                                           Binding="{Binding Referencia}" 
                                           Width="140"/>

                        <!-- Acciones -->
                        <DataGridTemplateColumn Header="Acciones" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                               ToolTip="Ver detalles"
                                               Tag="{Binding Id}"
                                               Click="VerDetallesButton_Click">
                                            <materialDesign:PackIcon Kind="Eye" 
                                                                    Width="20" 
                                                                    Height="20"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Loading overlay -->
                <Grid x:Name="LoadingOverlay"
                      Background="#80000000"
                      Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center" 
                               HorizontalAlignment="Center">
                        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                    Value="0"
                                    IsIndeterminate="True"
                                    Width="48"
                                    Height="48"/>
                        <TextBlock Text="Cargando pagos..." 
                                  Foreground="White"
                                  Margin="0,16,0,0"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Page>
