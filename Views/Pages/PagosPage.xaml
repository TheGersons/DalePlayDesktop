<Page x:Class="StreamManager.Views.Pages.PagosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Historial de Pagos">

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TÃ­tulo -->
        <TextBlock Grid.Row="0"
                   Text="Historial de Pagos de Clientes" 
                   FontSize="32"
                   FontWeight="Bold"
                   Margin="0,0,0,8"/>

        <!-- Cards de Resumen -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Recaudado -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,8,0" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="CashMultiple" 
                                                Width="24" Height="24" 
                                                Foreground="#4CAF50"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Total Recaudado" 
                                  FontSize="12" 
                                  Margin="8,0,0,0"
                                  Opacity="0.7"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="TotalRecaudadoTextBlock"
                              Text="L 0.00"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="#4CAF50"/>
                    <TextBlock x:Name="PeriodoRecaudadoTextBlock"
                              Text="Este mes"
                              FontSize="11"
                              Opacity="0.6"
                              Margin="0,4,0,0"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Total Pagos -->
            <materialDesign:Card Grid.Column="1" Margin="0,0,8,0" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="Receipt" 
                                                Width="24" Height="24" 
                                                Foreground="#2196F3"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Total Pagos" 
                                  FontSize="12" 
                                  Margin="8,0,0,0"
                                  Opacity="0.7"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="TotalPagosTextBlock"
                              Text="0"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="#2196F3"/>
                    <TextBlock x:Name="PeriodoPagosTextBlock"
                              Text="Este mes"
                              FontSize="11"
                              Opacity="0.6"
                              Margin="0,4,0,0"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Promedio por Pago -->
            <materialDesign:Card Grid.Column="2" Margin="0,0,8,0" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="ChartLine" 
                                                Width="24" Height="24" 
                                                Foreground="#FF9800"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Promedio" 
                                  FontSize="12" 
                                  Margin="8,0,0,0"
                                  Opacity="0.7"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="PromedioTextBlock"
                              Text="L 0.00"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="#FF9800"/>
                    <TextBlock Text="Por pago"
                              FontSize="11"
                              Opacity="0.6"
                              Margin="0,4,0,0"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Ãšltimo Pago -->
            <materialDesign:Card Grid.Column="3" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="ClockOutline" 
                                                Width="24" Height="24" 
                                                Foreground="#9C27B0"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Ãšltimo Pago" 
                                  FontSize="12" 
                                  Margin="8,0,0,0"
                                  Opacity="0.7"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="UltimoPagoMontoTextBlock"
                              Text="L 0.00"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="#9C27B0"/>
                    <TextBlock x:Name="UltimoPagoFechaTextBlock"
                              Text="Hace X horas"
                              FontSize="11"
                              Opacity="0.6"
                              Margin="0,4,0,0"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>

        <!-- Botones de acciÃ³n -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,16">
            <Button x:Name="RefrescarButton"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="RefrescarButton_Click"
                    Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Refresh" 
                                            VerticalAlignment="Center"/>
                    <TextBlock Text="REFRESCAR" 
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="LimpiarFiltrosButton"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Click="LimpiarFiltrosButton_Click">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="FilterRemove" 
                                            VerticalAlignment="Center"/>
                    <TextBlock Text="LIMPIAR FILTROS" 
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Panel de Filtros Avanzados -->
        <materialDesign:Card Grid.Row="3"
                             Padding="16"
                             Margin="0,0,0,16"
                             materialDesign:ElevationAssist.Elevation="Dp1">
            <Expander x:Name="FiltrosExpander"
                     Header="Filtros Avanzados"
                     IsExpanded="True">
                <Grid Margin="0,16,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Fila 1 -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- BÃºsqueda general -->
                        <TextBox x:Name="BusquedaTextBox"
                                Grid.Column="0"
                                materialDesign:HintAssist.Hint="ðŸ” Buscar (cliente, ref, telÃ©fono)"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="0,0,8,0"
                                TextChanged="BusquedaTextBox_TextChanged"/>

                        <!-- Filtro por cliente -->
                        <ComboBox x:Name="ClienteFiltroComboBox"
                                 Grid.Column="1"
                                 materialDesign:HintAssist.Hint="ðŸ‘¤ Cliente"
                                 Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                 DisplayMemberPath="NombreCompleto"
                                 Margin="0,0,8,0"
                                 SelectionChanged="FiltroComboBox_SelectionChanged"/>

                        <!-- Filtro por plataforma -->
                        <ComboBox x:Name="PlataformaFiltroComboBox"
                                 Grid.Column="2"
                                 materialDesign:HintAssist.Hint="ðŸ“º Plataforma"
                                 Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                 DisplayMemberPath="Nombre"
                                 Margin="0,0,8,0"
                                 SelectionChanged="FiltroComboBox_SelectionChanged"/>

                        <!-- Filtro por mÃ©todo -->
                        <ComboBox x:Name="MetodoFiltroComboBox"
                                 Grid.Column="3"
                                 materialDesign:HintAssist.Hint="ðŸ’³ MÃ©todo"
                                 Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                 SelectionChanged="FiltroComboBox_SelectionChanged">
                            <ComboBoxItem Content="Todos" Tag="todos" IsSelected="True"/>
                            <ComboBoxItem Content="ðŸ’µ Efectivo" Tag="efectivo"/>
                            <ComboBoxItem Content="ðŸ¦ Transferencia" Tag="transferencia"/>
                            <ComboBoxItem Content="ðŸ§ DepÃ³sito" Tag="deposito"/>
                            <ComboBoxItem Content="ðŸ“ Otro" Tag="otro"/>
                        </ComboBox>
                    </Grid>

                    <!-- Fila 2 -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Fecha DESDE -->
                        <DatePicker x:Name="FechaInicioDatePicker"
                                   Grid.Column="0"
                                   materialDesign:HintAssist.Hint="ðŸ“… Desde"
                                   Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                   Margin="0,0,8,0"
                                   SelectedDateChanged="FiltroComboBox_SelectionChanged"/>

                        <!-- Fecha HASTA -->
                        <DatePicker x:Name="FechaFinDatePicker"
                                   Grid.Column="1"
                                   materialDesign:HintAssist.Hint="ðŸ“… Hasta"
                                   Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                   Margin="0,0,8,0"
                                   SelectedDateChanged="FiltroComboBox_SelectionChanged"/>

                        <!-- Monto DESDE -->
                        <TextBox x:Name="MontoDesdeTextBox"
                                Grid.Column="2"
                                materialDesign:HintAssist.Hint="ðŸ’° Monto desde"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="0,0,8,0"
                                TextChanged="MontoTextBox_TextChanged"
                                PreviewTextInput="MontoTextBox_PreviewTextInput"/>

                        <!-- Monto HASTA -->
                        <TextBox x:Name="MontoHastaTextBox"
                                Grid.Column="3"
                                materialDesign:HintAssist.Hint="ðŸ’° Monto hasta"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="0,0,8,0"
                                TextChanged="MontoTextBox_TextChanged"
                                PreviewTextInput="MontoTextBox_PreviewTextInput"/>

                        <!-- Contador de resultados -->
                        <Border Grid.Column="4"
                               Background="#E3F2FD"
                               CornerRadius="4"
                               Padding="12,8">
                            <StackPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="FilterCheck" 
                                                        VerticalAlignment="Center"
                                                        Foreground="#1976D2"/>
                                <TextBlock x:Name="ResultadosTextBlock"
                                          Text="0 resultados"
                                          VerticalAlignment="Center"
                                          Margin="8,0,0,0"
                                          FontWeight="SemiBold"
                                          Foreground="#1976D2"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Expander>
        </materialDesign:Card>

        <!-- DataGrid de Pagos -->
        <materialDesign:Card Grid.Row="4"
                             Padding="0"
                             materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid>
                <DataGrid x:Name="PagosDataGrid"
                         AutoGenerateColumns="False"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False"
                         IsReadOnly="True"
                         SelectionMode="Single"
                         EnableRowVirtualization="True"
                         MinHeight="400"
                         MaxHeight="600"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         materialDesign:DataGridAssist.CellPadding="8"
                         materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                    <DataGrid.Columns>
                        <!-- Fecha -->
                        <DataGridTextColumn Header="Fecha" 
                                           Binding="{Binding FechaPagoTexto}" 
                                           Width="140"/>

                        <!-- Cliente -->
                        <DataGridTextColumn Header="Cliente" 
                                           Binding="{Binding ClienteNombre}" 
                                           Width="*"/>

                        <!-- TelÃ©fono -->
                        <DataGridTextColumn Header="TelÃ©fono" 
                                           Binding="{Binding ClienteTelefono}" 
                                           Width="120"/>

                        <!-- Plataforma -->
                        <DataGridTemplateColumn Header="Plataforma" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="{Binding PlataformaColor}"
                                               CornerRadius="4"
                                               Padding="8,4">
                                            <TextBlock Text="{Binding PlataformaNombre}"
                                                      Foreground="White"
                                                      FontSize="11"
                                                      FontWeight="SemiBold"/>
                                        </Border>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Monto -->
                        <DataGridTemplateColumn Header="Monto" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding MontoTexto}"
                                              FontWeight="Bold"
                                              Foreground="#4CAF50"
                                              FontSize="14"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- MÃ©todo de Pago -->
                        <DataGridTemplateColumn Header="MÃ©todo" Width="130">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="{Binding MetodoIcono}"
                                                                Width="16"
                                                                Height="16"
                                                                VerticalAlignment="Center"
                                                                Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding MetodoPago}"
                                                  VerticalAlignment="Center"
                                                  FontSize="12"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Referencia -->
                        <DataGridTextColumn Header="Referencia" 
                                           Binding="{Binding Referencia}" 
                                           Width="140"/>

                        <!-- Acciones -->
                        <DataGridTemplateColumn Header="Acciones" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                               ToolTip="Ver detalles"
                                               Tag="{Binding Id}"
                                               Click="VerDetallesButton_Click">
                                            <materialDesign:PackIcon Kind="Eye" 
                                                                    Width="20" 
                                                                    Height="20"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Loading overlay -->
                <Grid x:Name="LoadingOverlay"
                      Background="#80000000"
                      Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center" 
                               HorizontalAlignment="Center">
                        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                    Value="0"
                                    IsIndeterminate="True"
                                    Width="48"
                                    Height="48"/>
                        <TextBlock Text="Cargando pagos..." 
                                  Foreground="White"
                                  Margin="0,16,0,0"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </materialDesign:Card>
    </Grid>
    </ScrollViewer>
</Page>
