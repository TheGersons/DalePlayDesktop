<Page x:Class="StreamManager.Views.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Dashboard">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,32">
                <TextBlock Text="Dashboard" 
                          FontSize="32"
                          FontWeight="Bold"
                          Margin="0,0,0,8"/>
                <TextBlock x:Name="FechaTextBlock"
                          Text="Lunes, 03 de Enero 2026"
                          FontSize="16"
                          Opacity="0.7"/>
            </StackPanel>

            <!-- Cards de Estadísticas -->
            <Grid Grid.Row="1" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Suscripciones Activas -->
                <materialDesign:Card Grid.Column="0"
                                     Margin="0,0,12,0"
                                     Padding="24"
                                     materialDesign:ElevationAssist.Elevation="Dp4"
                                     Background="{DynamicResource PrimaryBrush}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <materialDesign:PackIcon Kind="AccountCash"
                                                    Width="32"
                                                    Height="32"
                                                    Foreground="White"
                                                    Opacity="0.9"/>
                            <TextBlock Text="Suscripciones Activas"
                                      FontSize="14"
                                      Foreground="White"
                                      Opacity="0.9"
                                      VerticalAlignment="Center"
                                      Margin="12,0,0,0"/>
                        </StackPanel>

                        <TextBlock x:Name="TotalSuscripcionesTextBlock"
                                  Grid.Row="1"
                                  Text="0"
                                  FontSize="48"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  VerticalAlignment="Center"/>

                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TrendingUp"
                                                    Width="16"
                                                    Height="16"
                                                    Foreground="White"
                                                    Opacity="0.7"
                                                    VerticalAlignment="Center"/>
                            <TextBlock x:Name="SuscripcionesChangeTextBlock"
                                      Text="+0 este mes"
                                      FontSize="12"
                                      Foreground="White"
                                      Opacity="0.7"
                                      VerticalAlignment="Center"
                                      Margin="8,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <!-- Ingresos Mensuales -->
                <materialDesign:Card Grid.Column="1"
                                     Margin="0,0,12,0"
                                     Padding="24"
                                     materialDesign:ElevationAssist.Elevation="Dp4"
                                     Background="#4CAF50">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <materialDesign:PackIcon Kind="CurrencyUsd"
                                                    Width="32"
                                                    Height="32"
                                                    Foreground="White"
                                                    Opacity="0.9"/>
                            <TextBlock Text="Ingresos Mensuales"
                                      FontSize="14"
                                      Foreground="White"
                                      Opacity="0.9"
                                      VerticalAlignment="Center"
                                      Margin="12,0,0,0"/>
                        </StackPanel>

                        <TextBlock x:Name="IngresosMensualesTextBlock"
                                  Grid.Row="1"
                                  Text="L 0.00"
                                  FontSize="42"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  VerticalAlignment="Center"/>

                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CalendarMonth"
                                                    Width="16"
                                                    Height="16"
                                                    Foreground="White"
                                                    Opacity="0.7"
                                                    VerticalAlignment="Center"/>
                            <TextBlock x:Name="MesActualTextBlock"
                                      Text="Enero 2026"
                                      FontSize="12"
                                      Foreground="White"
                                      Opacity="0.7"
                                      VerticalAlignment="Center"
                                      Margin="8,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <!-- Total Clientes -->
                <materialDesign:Card Grid.Column="2"
                                     Margin="0,0,12,0"
                                     Padding="24"
                                     materialDesign:ElevationAssist.Elevation="Dp4"
                                     Background="#FF9800">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <materialDesign:PackIcon Kind="AccountGroup"
                                                    Width="32"
                                                    Height="32"
                                                    Foreground="White"
                                                    Opacity="0.9"/>
                            <TextBlock Text="Clientes Activos"
                                      FontSize="14"
                                      Foreground="White"
                                      Opacity="0.9"
                                      VerticalAlignment="Center"
                                      Margin="12,0,0,0"/>
                        </StackPanel>

                        <TextBlock x:Name="TotalClientesTextBlock"
                                  Grid.Row="1"
                                  Text="0"
                                  FontSize="48"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  VerticalAlignment="Center"/>

                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Account"
                                                    Width="16"
                                                    Height="16"
                                                    Foreground="White"
                                                    Opacity="0.7"
                                                    VerticalAlignment="Center"/>
                            <TextBlock x:Name="ClientesActivosTextBlock"
                                      Text="0 activos"
                                      FontSize="12"
                                      Foreground="White"
                                      Opacity="0.7"
                                      VerticalAlignment="Center"
                                      Margin="8,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <!-- Perfiles Disponibles -->
                <materialDesign:Card Grid.Column="3"
                                     Padding="24"
                                     materialDesign:ElevationAssist.Elevation="Dp4"
                                     Background="#9C27B0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <materialDesign:PackIcon Kind="AccountMultiple"
                                                    Width="32"
                                                    Height="32"
                                                    Foreground="White"
                                                    Opacity="0.9"/>
                            <TextBlock Text="Perfiles Disponibles"
                                      FontSize="14"
                                      Foreground="White"
                                      Opacity="0.9"
                                      VerticalAlignment="Center"
                                      Margin="12,0,0,0"/>
                        </StackPanel>

                        <TextBlock x:Name="PerfilesDisponiblesTextBlock"
                                  Grid.Row="1"
                                  Text="0"
                                  FontSize="48"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  VerticalAlignment="Center"/>

                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CheckCircle"
                                                    Width="16"
                                                    Height="16"
                                                    Foreground="White"
                                                    Opacity="0.7"
                                                    VerticalAlignment="Center"/>
                            <TextBlock x:Name="PerfilesTotalTextBlock"
                                      Text="De 0 totales"
                                      FontSize="12"
                                      Foreground="White"
                                      Opacity="0.7"
                                      VerticalAlignment="Center"
                                      Margin="8,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- Sección de Gráficos y Alertas -->
            <Grid Grid.Row="2" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Gráfico de Ingresos -->
                <materialDesign:Card Grid.Column="0"
                                     Margin="0,0,12,0"
                                     Padding="24"
                                     materialDesign:ElevationAssist.Elevation="Dp2">
                    <StackPanel>
                        <TextBlock Text="Ingresos por Plataforma"
                                  FontSize="20"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,24"/>

                        <ItemsControl x:Name="IngresosPorPlataformaList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                  Text="{Binding Nombre}"
                                                  VerticalAlignment="Center"
                                                  FontWeight="SemiBold"/>

                                        <ProgressBar Grid.Column="1"
                                                    Value="{Binding Porcentaje}"
                                                    Maximum="100"
                                                    Height="24"
                                                    Margin="16,0,16,0"
                                                    Foreground="{Binding Color}"/>

                                        <TextBlock Grid.Column="2"
                                                  Text="{Binding MontoTexto}"
                                                  VerticalAlignment="Center"
                                                  FontWeight="Bold"
                                                  MinWidth="100"
                                                  TextAlignment="Right"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Alertas Recientes -->
                <materialDesign:Card Grid.Column="1"
                                     Padding="24"
                                     materialDesign:ElevationAssist.Elevation="Dp2">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <materialDesign:PackIcon Kind="BellAlert"
                                                    Width="24"
                                                    Height="24"
                                                    VerticalAlignment="Center"
                                                    Foreground="#F44336"/>
                            <TextBlock Text="Alertas"
                                      FontSize="20"
                                      FontWeight="SemiBold"
                                      VerticalAlignment="Center"
                                      Margin="12,0,0,0"/>
                        </StackPanel>

                        <ItemsControl x:Name="AlertasList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0"
                                           BorderThickness="0,0,0,1"
                                           Padding="0,12">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Titulo}"
                                                      FontWeight="SemiBold"
                                                      TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding FechaTexto}"
                                                      FontSize="12"
                                                      Opacity="0.6"
                                                      Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Button Content="VER TODAS"
                               Style="{StaticResource MaterialDesignFlatButton}"
                               HorizontalAlignment="Center"
                               Margin="0,16,0,0"
                               Click="VerAlertasButton_Click"/>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>

            <!-- Plataformas Populares -->
            <materialDesign:Card Grid.Row="3"
                                Padding="24"
                                materialDesign:ElevationAssist.Elevation="Dp2">
                <StackPanel>
                    <TextBlock Text="Plataformas Más Usadas"
                              FontSize="20"
                              FontWeight="SemiBold"
                              Margin="0,0,0,24"/>

                    <ItemsControl x:Name="PlataformasPopularesList">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="1"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <materialDesign:Card Margin="0,0,16,0"
                                                    Padding="20"
                                                    materialDesign:ElevationAssist.Elevation="Dp1">
                                    <StackPanel HorizontalAlignment="Center">
                                        <materialDesign:PackIcon Kind="{Binding Icono}"
                                                                Width="48"
                                                                Height="48"
                                                                HorizontalAlignment="Center"
                                                                Foreground="{Binding Color}"/>
                                        <TextBlock Text="{Binding Nombre}"
                                                  FontWeight="SemiBold"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,12,0,4"/>
                                        <TextBlock Text="{Binding SuscripcionesTexto}"
                                                  FontSize="12"
                                                  Opacity="0.6"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </materialDesign:Card>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </materialDesign:Card>

            <!-- Loading overlay -->
            <Grid x:Name="LoadingOverlay"
                  Grid.Row="0"
                  Grid.RowSpan="4"
                  Background="#80000000"
                  Visibility="Collapsed">
                <StackPanel VerticalAlignment="Center" 
                           HorizontalAlignment="Center">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                Value="0"
                                IsIndeterminate="True"
                                Width="64"
                                Height="64"/>
                    <TextBlock Text="Cargando datos..." 
                              Foreground="White"
                              FontSize="16"
                              Margin="0,16,0,0"
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
