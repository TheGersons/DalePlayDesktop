<Page x:Class="StreamManager.Views.Pages.GestionPagosClientesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="GestiÃ³n de Pagos de Clientes">

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="185"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Cobros y Pagos de Clientes" 
                   FontSize="32"
                   FontWeight="Bold"
                   Margin="0,0,0,8"/>

        <!-- Cards de Resumen -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <materialDesign:Card Grid.Column="0" Margin="0,0,8,0" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="AlertCircle" 
                                                Width="24" Height="24" 
                                                Foreground="#F44336"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Pendientes de Cobro" 
                                  FontSize="12" 
                                  Margin="8,0,0,0"
                                  Opacity="0.7"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="PendientesCobrarTextBlock"
                              Text="0"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="#F44336"/>
                    <TextBlock x:Name="MontoPendienteTextBlock"
                              Text="L 0.00"
                              FontSize="13"
                              FontWeight="SemiBold"
                              Foreground="#F44336"
                              Margin="0,4,0,0"/>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Grid.Column="1" Margin="0,0,8,0" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="ClockAlert" 
                                                Width="24" Height="24" 
                                                Foreground="#FF9800"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Vencen Hoy" 
                                  FontSize="12" 
                                  Margin="8,0,0,0"
                                  Opacity="0.7"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="VencenHoyTextBlock"
                              Text="0"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="#FF9800"/>
                    <TextBlock x:Name="MontoHoyTextBlock"
                              Text="L 0.00"
                              FontSize="13"
                              FontWeight="SemiBold"
                              Foreground="#FF9800"
                              Margin="0,4,0,0"/>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Grid.Column="2" Margin="0,0,8,0" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="CalendarClock" 
                                                Width="24" Height="24" 
                                                Foreground="#2196F3"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="PrÃ³ximos 7 DÃ­as" 
                                  FontSize="12" 
                                  Margin="8,0,0,0"
                                  Opacity="0.7"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="ProximosTextBlock"
                              Text="0"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="#2196F3"/>
                    <TextBlock x:Name="MontoProximosTextBlock"
                              Text="L 0.00"
                              FontSize="13"
                              FontWeight="SemiBold"
                              Foreground="#2196F3"
                              Margin="0,4,0,0"/>
                </StackPanel>
            </materialDesign:Card>

                <materialDesign:Card x:Name="CobradoHoyCard" Grid.Column="3" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="CashCheck" 
                                                Width="24" Height="24" 
                                                Foreground="#4CAF50"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Cobrado Hoy" 
                                  FontSize="12" 
                                  Margin="8,0,0,0"
                                  Opacity="0.7"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="CobradoHoyTextBlock"
                              Text="L 0.00"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="#4CAF50"/>
                    <TextBlock x:Name="PagosHoyTextBlock"
                              Text="0 pagos"
                              FontSize="11"
                              Opacity="0.6"
                              Margin="0,4,0,0"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>

        <!-- Barra de acciones -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,16">
            <Button x:Name="RefrescarButton"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="RefrescarButton_Click"
                    Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Refresh" 
                                            VerticalAlignment="Center"/>
                    <TextBlock Text="REFRESCAR" 
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="LimpiarFiltrosButton"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Click="LimpiarFiltrosButton_Click">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="FilterRemove" 
                                            VerticalAlignment="Center"/>
                    <TextBlock Text="LIMPIAR FILTROS" 
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Panel de Filtros Avanzados -->
        <materialDesign:Card Grid.Row="3"
                             Padding="16"
                             Margin="0,0,0,16"
                             materialDesign:ElevationAssist.Elevation="Dp1">
            <Expander x:Name="FiltrosExpander"
                     Header="Filtros Avanzados"
                     IsExpanded="True">
                <Grid Margin="0,16,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Fila 1 -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- BÃºsqueda por cliente -->
                        <TextBox x:Name="BusquedaTextBox"
                                Grid.Column="0"
                                materialDesign:HintAssist.Hint="ðŸ” Cliente"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="0,0,8,0"
                                TextChanged="BusquedaTextBox_TextChanged"/>

                        <!-- BÃºsqueda por telÃ©fono -->
                        <TextBox x:Name="TelefonoTextBox"
                                Grid.Column="1"
                                materialDesign:HintAssist.Hint="ðŸ“± TelÃ©fono"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="0,0,8,0"
                                TextChanged="BusquedaTextBox_TextChanged"/>

                        <!-- Filtro por plataforma -->
                        <ComboBox x:Name="PlataformaFiltroComboBox"
                                 Grid.Column="2"
                                 materialDesign:HintAssist.Hint="ðŸ“º Plataforma"
                                 Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                 DisplayMemberPath="Nombre"
                                 Margin="0,0,8,0"
                                 SelectionChanged="FiltroComboBox_SelectionChanged"/>

                        <!-- Filtro por estado de pago -->
                        <ComboBox x:Name="EstadoFiltroComboBox"
                                 Grid.Column="3"
                                 materialDesign:HintAssist.Hint="ðŸ“Š Estado"
                                 Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                 SelectionChanged="FiltroComboBox_SelectionChanged">
                            <ComboBoxItem Content="Todos" Tag="todos" IsSelected="True"/>
                            <ComboBoxItem Content="ðŸ”´ Vencidos" Tag="vencidos"/>
                            <ComboBoxItem Content="â° Vencen Hoy" Tag="hoy"/>
                            <ComboBoxItem Content="ðŸ“… PrÃ³ximos 7 dÃ­as" Tag="proximos"/>
                            <ComboBoxItem Content="âœ… Activas" Tag="activa"/>
                        </ComboBox>
                    </Grid>

                    <!-- Fila 2 -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Filtro fecha DESDE -->
                        <DatePicker x:Name="FechaDesdeFilterPicker"
                                   Grid.Column="0"
                                   materialDesign:HintAssist.Hint="ðŸ“… Desde"
                                   Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                   Margin="0,0,8,0"
                                   SelectedDateChanged="FechaFiltro_SelectedDateChanged"/>

                        <!-- Filtro fecha HASTA -->
                        <DatePicker x:Name="FechaHastaFilterPicker"
                                   Grid.Column="1"
                                   materialDesign:HintAssist.Hint="ðŸ“… Hasta"
                                   Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                   Margin="0,0,8,0"
                                   SelectedDateChanged="FechaFiltro_SelectedDateChanged"/>

                        <!-- Contador de resultados -->
                        <Border Grid.Column="2"
                               Background="#E3F2FD"
                               CornerRadius="4"
                               Padding="12,8">
                            <StackPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="FilterCheck" 
                                                        VerticalAlignment="Center"
                                                        Foreground="#1976D2"/>
                                <TextBlock x:Name="ResultadosTextBlock"
                                          Text="0 resultados"
                                          VerticalAlignment="Center"
                                          Margin="8,0,0,0"
                                          FontWeight="SemiBold"
                                          Foreground="#1976D2"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Expander>
        </materialDesign:Card>

        <!-- Lista de Suscripciones -->
        <materialDesign:Card Grid.Row="4" Padding="0" materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                             MinHeight="400"
                             MaxHeight="700">
                    <ItemsControl x:Name="SuscripcionesItemsControl" Padding="16">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding EstadoBackground}"
                                       BorderBrush="#E0E0E0"
                                       BorderThickness="1"
                                       CornerRadius="8"
                                       Padding="20"
                                       Margin="0,0,0,12"
                                       materialDesign:ElevationAssist.Elevation="Dp1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0"
                                               Width="50"
                                               Height="50"
                                               Background="#2196F3"
                                               CornerRadius="25"
                                               VerticalAlignment="Center">
                                            <TextBlock Text="{Binding ClienteIniciales}"
                                                      FontSize="18"
                                                      FontWeight="Bold"
                                                      Foreground="White"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" 
                                                   VerticalAlignment="Center"
                                                   Margin="16,0,0,0">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <TextBlock Text="{Binding ClienteNombre}"
                                                          FontSize="18"
                                                          FontWeight="Bold"
                                                          VerticalAlignment="Center"
                                                          Margin="0,0,4,0"/>
                                                <TextBlock Text="{Binding ClienteTelefono}"
                                                          FontSize="13"
                                                          Opacity="0.7"
                                                          VerticalAlignment="Center"
                                                          Margin="0,0,16,0"/>

                                                <Border Background="{Binding PlataformaColor}"
                                                       CornerRadius="4"
                                                       Padding="8,4">
                                                    <TextBlock Text="{Binding PlataformaNombre}"
                                                              FontSize="11"
                                                              FontWeight="SemiBold"
                                                              Foreground="White"/>
                                                </Border>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal">
                                                <Border Background="{Binding EstadoColor}"
                                                       CornerRadius="4"
                                                       Padding="8,4"
                                                       Margin="0,0,8,0">
                                                    <TextBlock Text="{Binding EstadoPagoTexto}"
                                                              FontSize="11"
                                                              FontWeight="Bold"
                                                              Foreground="White"/>
                                                </Border>

                                                <TextBlock Text="{Binding FechaProximoPagoTexto}"
                                                          FontSize="13"
                                                          VerticalAlignment="Center"
                                                          Margin="0,0,12,0"/>

                                                <TextBlock Text="{Binding DiasRestantesTexto}"
                                                          FontSize="13"
                                                          FontWeight="Bold"
                                                          Foreground="{Binding DiasRestantesColor}"
                                                          VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,20,0">
                                            <TextBlock Text="Monto"
                                                      FontSize="11"
                                                      Opacity="0.6"
                                                      HorizontalAlignment="Right"/>
                                            <TextBlock Text="{Binding PrecioTexto}"
                                                      FontSize="32"
                                                      FontWeight="Bold"
                                                      Foreground="{Binding EstadoColor}"
                                                      HorizontalAlignment="Right"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="3"
                                                   Orientation="Vertical"
                                                   VerticalAlignment="Center">
                                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                                   Background="#4CAF50"
                                                   BorderBrush="#4CAF50"
                                                   Tag="{Binding Id}"
                                                   Click="RegistrarPagoButton_Click"
                                                   Margin="0,0,0,8"
                                                   Width="160">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="CashCheck"
                                                                            Width="18"
                                                                            Height="18"
                                                                            VerticalAlignment="Center"/>
                                                    <TextBlock Text="COBRAR"
                                                              Margin="8,0,0,0"
                                                              VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Button>

                                            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                                   Tag="{Binding Id}"
                                                   Click="VerDetallesButton_Click"
                                                   Width="160">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="InformationOutline"
                                                                            Width="18"
                                                                            Height="18"
                                                                            VerticalAlignment="Center"/>
                                                    <TextBlock Text="DETALLES"
                                                              Margin="8,0,0,0"
                                                              VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Grid x:Name="LoadingOverlay"
                      Background="#80000000"
                      Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center" 
                               HorizontalAlignment="Center">
                        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                    Value="0"
                                    IsIndeterminate="True"
                                    Width="48"
                                    Height="48"/>
                        <TextBlock Text="Cargando suscripciones..." 
                                  Foreground="White"
                                  Margin="0,16,0,0"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <StackPanel x:Name="EmptyStatePanel"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Visibility="Collapsed"
                           Margin="40">
                    <materialDesign:PackIcon Kind="CashRemove"
                                            Width="80"
                                            Height="80"
                                            Foreground="#CCCCCC"
                                            HorizontalAlignment="Center"/>
                    <TextBlock Text="No hay suscripciones pendientes"
                              FontSize="20"
                              FontWeight="SemiBold"
                              Foreground="#999999"
                              HorizontalAlignment="Center"
                              Margin="0,16,0,8"/>
                    <TextBlock Text="Todas las suscripciones estÃ¡n al dÃ­a"
                              FontSize="14"
                              Foreground="#999999"
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
        </Grid>
    </ScrollViewer>
</Page>
