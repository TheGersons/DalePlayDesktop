<Page x:Class="StreamManager.Views.Pages.AlertasPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Alertas">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="Sistema de Alertas" 
                   FontSize="32"
                   FontWeight="Bold"
                   Margin="0,0,0,8"/>

        <!-- Barra de acciones y filtros -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Botones de acción -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button x:Name="RefrescarButton"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Click="RefrescarButton_Click"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Refresh" 
                                                VerticalAlignment="Center"
                                                Width="18"
                                                Height="18"/>
                        <TextBlock Text="REFRESCAR" 
                                  Margin="8,0,0,0"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="MarcarLeidasButton"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Click="MarcarLeidasButton_Click"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="CheckAll" 
                                                VerticalAlignment="Center"
                                                Width="18"
                                                Height="18"/>
                        <TextBlock Text="MARCAR TODAS LEÍDAS" 
                                  Margin="8,0,0,0"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="LimpiarButton"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Click="LimpiarButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Delete" 
                                                VerticalAlignment="Center"
                                                Width="18"
                                                Height="18"/>
                        <TextBlock Text="LIMPIAR ANTIGUAS" 
                                  Margin="8,0,0,0"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Filtros -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <ComboBox x:Name="TipoFiltroComboBox"
                         materialDesign:HintAssist.Hint="Tipo de Alerta"
                         Style="{StaticResource MaterialDesignOutlinedComboBox}"
                         Width="180"
                         Margin="0,0,8,0"
                         SelectionChanged="FiltroComboBox_SelectionChanged">
                    <ComboBoxItem Content="Todas" Tag="todas" IsSelected="True"/>
                    <ComboBoxItem Content="Cobro a Clientes" Tag="cobro_cliente"/>
                    <ComboBoxItem Content="Pago a Plataformas" Tag="pago_plataforma"/>
                </ComboBox>

                <ComboBox x:Name="NivelFiltroComboBox"
                         materialDesign:HintAssist.Hint="Nivel"
                         Style="{StaticResource MaterialDesignOutlinedComboBox}"
                         Width="150"
                         Margin="0,0,8,0"
                         SelectionChanged="FiltroComboBox_SelectionChanged">
                    <ComboBoxItem Content="Todos" Tag="todos" IsSelected="True"/>
                    <ComboBoxItem Content="Crítico" Tag="critico"/>
                    <ComboBoxItem Content="Urgente" Tag="urgente"/>
                    <ComboBoxItem Content="Advertencia" Tag="advertencia"/>
                    <ComboBoxItem Content="Normal" Tag="normal"/>
                </ComboBox>

                <ComboBox x:Name="EstadoFiltroComboBox"
                         materialDesign:HintAssist.Hint="Estado"
                         Style="{StaticResource MaterialDesignOutlinedComboBox}"
                         Width="150"
                         SelectionChanged="FiltroComboBox_SelectionChanged">
                    <ComboBoxItem Content="Pendientes" Tag="pendiente" IsSelected="True"/>
                    <ComboBoxItem Content="Enviadas" Tag="enviada"/>
                    <ComboBoxItem Content="Leídas" Tag="leida"/>
                    <ComboBoxItem Content="Resueltas" Tag="resuelta"/>
                    <ComboBoxItem Content="Todas" Tag="todas"/>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- Contenido -->
        <materialDesign:Card Grid.Row="2"
                             Padding="0"
                             materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid>
                <!-- Lista de Alertas -->
                <ScrollViewer x:Name="AlertasScrollViewer"
                             VerticalScrollBarVisibility="Auto"
                             Visibility="Collapsed">
                    <ItemsControl x:Name="AlertasItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0"
                                       BorderThickness="0,0,0,1"
                                       Background="{Binding EstadoBackground}"
                                       Padding="20">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Icono y Badge de Nivel -->
                                        <Grid Grid.Column="0" Margin="0,0,16,0">
                                            <Border Width="56"
                                                   Height="56"
                                                   CornerRadius="28"
                                                   Background="{Binding NivelColor}"
                                                   VerticalAlignment="Top">
                                                <materialDesign:PackIcon Kind="{Binding TipoIcono}"
                                                                        Width="28"
                                                                        Height="28"
                                                                        Foreground="White"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Badge de nivel en la esquina -->
                                            <Border Width="20"
                                                   Height="20"
                                                   CornerRadius="10"
                                                   Background="White"
                                                   VerticalAlignment="Bottom"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,-4,-4">
                                                <TextBlock Text="{Binding NivelTextoCorto}"
                                                          FontSize="9"
                                                          FontWeight="Bold"
                                                          Foreground="{Binding NivelColor}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                        </Grid>

                                        <!-- Contenido -->
                                        <StackPanel Grid.Column="1"
                                                   VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Mensaje}"
                                                      FontSize="15"
                                                      FontWeight="SemiBold"
                                                      TextWrapping="Wrap"
                                                      Margin="0,0,0,6"/>
                                            
                                            <StackPanel Orientation="Horizontal">
                                                <Border Background="{Binding TipoColor}"
                                                       CornerRadius="4"
                                                       Padding="8,4"
                                                       Margin="0,0,8,0">
                                                    <TextBlock Text="{Binding TipoTexto}"
                                                              FontSize="11"
                                                              FontWeight="SemiBold"
                                                              Foreground="White"/>
                                                </Border>

                                                <TextBlock Text="{Binding FechaTexto}"
                                                          FontSize="12"
                                                          Opacity="0.6"
                                                          VerticalAlignment="Center"
                                                          Margin="0,0,12,0"/>

                                                <TextBlock Text="{Binding DiasRestantesTexto}"
                                                          FontSize="12"
                                                          FontWeight="Bold"
                                                          Foreground="{Binding NivelColor}"
                                                          VerticalAlignment="Center"
                                                          Visibility="{Binding TieneDiasRestantes}"/>
                                            </StackPanel>

                                            <TextBlock Text="{Binding MontoTexto}"
                                                      FontSize="13"
                                                      FontWeight="Bold"
                                                      Foreground="#4CAF50"
                                                      Margin="0,4,0,0"
                                                      Visibility="{Binding TieneMonto}"/>
                                        </StackPanel>

                                        <!-- Indicador de estado -->
                                        <Border Grid.Column="2"
                                               Background="{Binding EstadoColor}"
                                               CornerRadius="12"
                                               Padding="12,6"
                                               Margin="0,0,12,0"
                                               VerticalAlignment="Center">
                                            <TextBlock Text="{Binding EstadoTexto}"
                                                      FontSize="11"
                                                      FontWeight="Bold"
                                                      Foreground="White"/>
                                        </Border>

                                        <!-- Acciones -->
                                        <StackPanel Grid.Column="3"
                                                   Orientation="Horizontal"
                                                   VerticalAlignment="Center">
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                   ToolTip="Ver detalles"
                                                   Tag="{Binding Id}"
                                                   Click="VerDetallesButton_Click">
                                                <materialDesign:PackIcon Kind="Eye"
                                                                        Width="20"
                                                                        Height="20"/>
                                            </Button>
                                            
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                   ToolTip="Marcar como leída"
                                                   Tag="{Binding Id}"
                                                   Click="MarcarLeidaButton_Click"
                                                   Visibility="{Binding EsPendiente}">
                                                <materialDesign:PackIcon Kind="Check"
                                                                        Width="20"
                                                                        Height="20"
                                                                        Foreground="#4CAF50"/>
                                            </Button>

                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                   ToolTip="Resolver"
                                                   Tag="{Binding Id}"
                                                   Click="ResolverButton_Click"
                                                   Visibility="{Binding EsPendiente}">
                                                <materialDesign:PackIcon Kind="CheckCircle"
                                                                        Width="20"
                                                                        Height="20"
                                                                        Foreground="#2196F3"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Estado vacío -->
                <StackPanel x:Name="EmptyStatePanel"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Visibility="Collapsed"
                           Margin="40">
                    <materialDesign:PackIcon Kind="BellOff"
                                            Width="80"
                                            Height="80"
                                            Foreground="#CCCCCC"
                                            HorizontalAlignment="Center"/>
                    <TextBlock Text="No hay alertas"
                              FontSize="20"
                              FontWeight="SemiBold"
                              Foreground="#999999"
                              HorizontalAlignment="Center"
                              Margin="0,16,0,8"/>
                    <TextBlock Text="Las alertas de vencimiento y pagos aparecerán aquí automáticamente"
                              FontSize="14"
                              Foreground="#999999"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              TextAlignment="Center"
                              MaxWidth="300"/>
                </StackPanel>

                <!-- Loading overlay -->
                <Grid x:Name="LoadingOverlay"
                      Background="#80000000"
                      Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center" 
                               HorizontalAlignment="Center">
                        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                    Value="0"
                                    IsIndeterminate="True"
                                    Width="48"
                                    Height="48"/>
                        <TextBlock Text="Cargando alertas..." 
                                  Foreground="White"
                                  Margin="0,16,0,0"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Page>
