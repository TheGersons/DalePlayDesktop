<Page x:Class="StreamManager.Views.Pages.PerfilesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Perfiles">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TÃ­tulo -->
        <TextBlock Grid.Row="0"
                   Text="GestiÃ³n de Perfiles" 
                   Style="{StaticResource PageTitle}"/>

        <!-- Barra de acciones -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,16">
            <Button x:Name="NuevoButton"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="NuevoButton_Click"
                    Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AccountPlus" 
                                            VerticalAlignment="Center"/>
                    <TextBlock Text="NUEVO PERFIL" 
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="RefrescarButton"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Click="RefrescarButton_Click"
                    Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Refresh" 
                                            VerticalAlignment="Center"/>
                    <TextBlock Text="REFRESCAR" 
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="LimpiarFiltrosButton"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Click="LimpiarFiltrosButton_Click">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="FilterRemove" 
                                            VerticalAlignment="Center"/>
                    <TextBlock Text="LIMPIAR FILTROS" 
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Panel de Filtros Avanzados -->
        <materialDesign:Card Grid.Row="2"
                             Padding="16"
                             Margin="0,0,0,16"
                             materialDesign:ElevationAssist.Elevation="Dp1">
            <Expander x:Name="FiltrosExpander"
                     Header="Filtros Avanzados"
                     IsExpanded="True">
                <Grid Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- BÃºsqueda por nombre -->
                    <TextBox x:Name="BuscarTextBox"
                            Grid.Column="0"
                            materialDesign:HintAssist.Hint="ðŸ” Buscar por nombre"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Margin="0,0,8,0"
                            TextChanged="BuscarTextBox_TextChanged"/>

                    <!-- BÃºsqueda por cuenta -->
                    <TextBox x:Name="CuentaFiltroTextBox"
                            Grid.Column="1"
                            materialDesign:HintAssist.Hint="ðŸ“§ Cuenta/Email"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Margin="0,0,8,0"
                            TextChanged="BuscarTextBox_TextChanged"/>

                    <!-- Filtro por plataforma -->
                    <ComboBox x:Name="PlataformaFiltroComboBox"
                             Grid.Column="2"
                             materialDesign:HintAssist.Hint="ðŸ“º Plataforma"
                             Style="{StaticResource MaterialDesignOutlinedComboBox}"
                             DisplayMemberPath="Nombre"
                             Margin="0,0,8,0"
                             SelectionChanged="FiltroComboBox_SelectionChanged"/>

                    <!-- Filtro por estado -->
                    <ComboBox x:Name="EstadoFiltroComboBox"
                             Grid.Column="3"
                             materialDesign:HintAssist.Hint="ðŸ“Š Estado"
                             Style="{StaticResource MaterialDesignOutlinedComboBox}"
                             Margin="0,0,8,0"
                             SelectionChanged="FiltroComboBox_SelectionChanged">
                        <ComboBoxItem Content="Todos" Tag="" IsSelected="True"/>
                        <ComboBoxItem Content="âœ… Disponible" Tag="disponible"/>
                        <ComboBoxItem Content="ðŸ”’ Ocupado" Tag="ocupado"/>
                    </ComboBox>

                    <!-- Contador de resultados -->
                    <Border Grid.Column="4"
                           Background="#E3F2FD"
                           CornerRadius="4"
                           Padding="12,8">
                        <StackPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="FilterCheck" 
                                                    VerticalAlignment="Center"
                                                    Foreground="#1976D2"/>
                            <TextBlock x:Name="ResultadosTextBlock"
                                      Text="0 resultados"
                                      VerticalAlignment="Center"
                                      Margin="8,0,0,0"
                                      FontWeight="SemiBold"
                                      Foreground="#1976D2"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Expander>
        </materialDesign:Card>

        <!-- DataGrid de perfiles -->
        <materialDesign:Card Grid.Row="3"
                             Padding="16"
                             materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid>
                <!-- DataGrid -->
                <DataGrid x:Name="PerfilesDataGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          materialDesign:DataGridAssist.CellPadding="8"
                          materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                    <DataGrid.Columns>
                        <!-- Nombre -->
                        <DataGridTextColumn Header="Nombre" 
                                          Binding="{Binding Nombre}"
                                          Width="200"/>

                        <!-- Plataforma -->
                        <DataGridTextColumn Header="Plataforma" 
                                          Binding="{Binding PlataformaNombre}"
                                          Width="150"/>

                        <!-- Cuenta -->
                        <DataGridTextColumn Header="Cuenta" 
                                          Binding="{Binding CuentaNombre}"
                                          Width="*"/>

                        <!-- Estado -->
                        <DataGridTemplateColumn Header="Estado" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Estado, Converter={StaticResource EstadoColorConverter}}"
                                            CornerRadius="12"
                                            Padding="8,4">
                                        <TextBlock Text="{Binding Estado}" 
                                                  Foreground="White"
                                                  FontWeight="SemiBold"
                                                  HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Acciones -->
                        <DataGridTemplateColumn Header="Acciones" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" 
                                               HorizontalAlignment="Center">
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                               ToolTip="Ver detalles"
                                               Click="VerButton_Click"
                                               Tag="{Binding}">
                                            <materialDesign:PackIcon Kind="Eye"/>
                                        </Button>
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                               ToolTip="Editar"
                                               Click="EditarButton_Click"
                                               Tag="{Binding}">
                                            <materialDesign:PackIcon Kind="Pencil"/>
                                        </Button>
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                               ToolTip="Eliminar"
                                               Click="EliminarButton_Click"
                                               Tag="{Binding}"
                                               Foreground="Red">
                                            <materialDesign:PackIcon Kind="Delete"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Loading overlay -->
                <Grid x:Name="LoadingOverlay"
                      Background="#80000000"
                      Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center" 
                               HorizontalAlignment="Center">
                        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                    Value="0"
                                    IsIndeterminate="True"
                                    Width="48"
                                    Height="48"/>
                        <TextBlock Text="Cargando..." 
                                  Foreground="White"
                                  Margin="0,16,0,0"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Page>
