<Page x:Class="StreamManager.Views.Pages.SuscripcionesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Suscripciones">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TÃ­tulo -->
        <TextBlock Grid.Row="0"
                   Text="GestiÃ³n de Suscripciones" 
                   Style="{StaticResource PageTitle}"/>

        <!-- Barra de acciones -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,16">
            <Button x:Name="NuevoButton"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="NuevoButton_Click"
                    Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AccountCash" 
                                            VerticalAlignment="Center"/>
                    <TextBlock Text="NUEVA SUSCRIPCIÃ“N" 
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="RefrescarButton"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Click="RefrescarButton_Click"
                    Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Refresh" 
                                            VerticalAlignment="Center"/>
                    <TextBlock Text="REFRESCAR" 
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="LimpiarFiltrosButton"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Click="LimpiarFiltrosButton_Click"
                    Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="FilterRemove" 
                                            VerticalAlignment="Center"/>
                    <TextBlock Text="LIMPIAR FILTROS" 
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Panel de Filtros Avanzados -->
        <materialDesign:Card Grid.Row="2"
                             Padding="16"
                             Margin="0,0,0,16"
                             materialDesign:ElevationAssist.Elevation="Dp1">
            <Expander x:Name="FiltrosExpander"
                     Header="Filtros Avanzados"
                     IsExpanded="True">
                <Grid Margin="0,16,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Primera fila de filtros -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- BÃºsqueda general -->
                        <TextBox x:Name="BuscarTextBox"
                                Grid.Column="0"
                                materialDesign:HintAssist.Hint="ðŸ” Buscar (cliente, perfil, plataforma)"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="0,0,8,0"
                                TextChanged="BuscarTextBox_TextChanged"/>

                        <!-- Filtro por Cliente -->
                        <ComboBox x:Name="ClienteFiltroComboBox"
                                 Grid.Column="1"
                                 materialDesign:HintAssist.Hint="ðŸ‘¤ Filtrar por cliente"
                                 Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                 DisplayMemberPath="NombreCompleto"
                                 Margin="0,0,8,0"
                                 SelectionChanged="FiltroComboBox_SelectionChanged"/>

                        <!-- Filtro por Plataforma -->
                        <ComboBox x:Name="PlataformaFiltroComboBox"
                                 Grid.Column="2"
                                 materialDesign:HintAssist.Hint="ðŸ“º Filtrar por plataforma"
                                 Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                 DisplayMemberPath="Nombre"
                                 Margin="0,0,8,0"
                                 SelectionChanged="FiltroComboBox_SelectionChanged"/>

                        <!-- Filtro por Estado -->
                        <ComboBox x:Name="EstadoFiltroComboBox"
                                 Grid.Column="3"
                                 materialDesign:HintAssist.Hint="ðŸ“Š Filtrar por estado"
                                 Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                 SelectionChanged="FiltroComboBox_SelectionChanged">
                            <ComboBoxItem Content="Todos los estados" Tag="" IsSelected="True"/>
                            <ComboBoxItem Content="âœ… Activas" Tag="activa"/>
                            <ComboBoxItem Content="â° Vencidas" Tag="vencida"/>
                            <ComboBoxItem Content="âŒ Canceladas" Tag="cancelada"/>
                        </ComboBox>
                    </Grid>

                    <!-- Segunda fila de filtros -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Filtro por TelÃ©fono -->
                        <TextBox x:Name="TelefonoFiltroTextBox"
                                Grid.Column="0"
                                materialDesign:HintAssist.Hint="ðŸ“± Buscar por telÃ©fono"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="0,0,8,0"
                                TextChanged="BuscarTextBox_TextChanged"/>

                        <!-- Filtro fecha DESDE -->
                        <DatePicker x:Name="FechaDesdeFilterPicker"
                                   Grid.Column="1"
                                   materialDesign:HintAssist.Hint="ðŸ“… PrÃ³ximo pago desde"
                                   Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                   Margin="0,0,8,0"
                                   SelectedDateChanged="FechaFiltro_SelectedDateChanged"/>

                        <!-- Filtro fecha HASTA -->
                        <DatePicker x:Name="FechaHastaFilterPicker"
                                   Grid.Column="2"
                                   materialDesign:HintAssist.Hint="ðŸ“… PrÃ³ximo pago hasta"
                                   Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                   Margin="0,0,8,0"
                                   SelectedDateChanged="FechaFiltro_SelectedDateChanged"/>

                        <!-- Contador de resultados -->
                        <Border Grid.Column="3"
                               Background="#E3F2FD"
                               CornerRadius="4"
                               Padding="12,8">
                            <StackPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="FilterCheck" 
                                                        VerticalAlignment="Center"
                                                        Foreground="#1976D2"/>
                                <TextBlock x:Name="ResultadosTextBlock"
                                          Text="0 resultados"
                                          VerticalAlignment="Center"
                                          Margin="8,0,0,0"
                                          FontWeight="SemiBold"
                                          Foreground="#1976D2"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Expander>
        </materialDesign:Card>

        <!-- DataGrid de suscripciones -->
        <materialDesign:Card Grid.Row="3"
                             Padding="16"
                             materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid>
                <!-- DataGrid -->
                <DataGrid x:Name="SuscripcionesDataGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          materialDesign:DataGridAssist.CellPadding="8"
                          materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                    <DataGrid.Columns>
                        <!-- Cliente -->
                        <DataGridTextColumn Header="Cliente" 
                                          Binding="{Binding ClienteNombre}"
                                          Width="*"/>

                        <!-- TelÃ©fono -->
                        <DataGridTextColumn Header="TelÃ©fono" 
                                          Binding="{Binding ClienteTelefono}"
                                          Width="110"/>

                        <!-- Plataforma -->
                        <DataGridTextColumn Header="Plataforma" 
                                          Binding="{Binding PlataformaNombre}"
                                          Width="120"/>

                        <!-- Perfil -->
                        <DataGridTextColumn Header="Perfil" 
                                          Binding="{Binding PerfilNombre}"
                                          Width="130"/>

                        <!-- Costo -->
                        <DataGridTextColumn Header="Costo Mensual" 
                                          Binding="{Binding CostoMensual, StringFormat=L {0:N2}}"
                                          Width="120"/>

                        <!-- Fecha Inicio -->
                        <DataGridTextColumn Header="Inicio" 
                                          Binding="{Binding FechaInicio, StringFormat=dd/MM/yyyy}"
                                          Width="100"/>

                        <!-- PrÃ³ximo Pago -->
                        <DataGridTextColumn Header="PrÃ³ximo Pago" 
                                          Binding="{Binding ProximoPago, StringFormat=dd/MM/yyyy}"
                                          Width="120"/>

                        <!-- Estado -->
                        <DataGridTemplateColumn Header="Estado" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Estado, Converter={StaticResource EstadoColorConverter}}"
                                            CornerRadius="12"
                                            Padding="8,4">
                                        <TextBlock Text="{Binding Estado}" 
                                                  Foreground="White"
                                                  FontWeight="SemiBold"
                                                  HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Acciones -->
                        <DataGridTemplateColumn Header="Acciones" Width="220">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" 
                                               HorizontalAlignment="Center">
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                               ToolTip="Ver detalles"
                                               Click="VerButton_Click"
                                               Tag="{Binding}">
                                            <materialDesign:PackIcon Kind="Eye"/>
                                        </Button>
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                               ToolTip="Editar"
                                               Click="EditarButton_Click"
                                               Tag="{Binding}">
                                            <materialDesign:PackIcon Kind="Pencil"/>
                                        </Button>
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                               ToolTip="Renovar"
                                               Click="RenovarButton_Click"
                                               Tag="{Binding}"
                                               Foreground="#4CAF50">
                                            <materialDesign:PackIcon Kind="Refresh"/>
                                        </Button>
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                               ToolTip="Cancelar"
                                               Click="CancelarButton_Click"
                                               Tag="{Binding}"
                                               Foreground="Red">
                                            <materialDesign:PackIcon Kind="Cancel"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Loading overlay -->
                <Grid x:Name="LoadingOverlay"
                      Background="#80000000"
                      Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center" 
                               HorizontalAlignment="Center">
                        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                    Value="0"
                                    IsIndeterminate="True"
                                    Width="48"
                                    Height="48"/>
                        <TextBlock Text="Cargando..." 
                                  Foreground="White"
                                  Margin="0,16,0,0"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Page>
