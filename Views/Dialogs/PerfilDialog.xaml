<Window x:Class="StreamManager.Views.Dialogs.PerfilDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Perfil"
        Height="550"
        Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TÃ­tulo -->
        <TextBlock x:Name="TituloTextBlock"
                   Grid.Row="0"
                   Text="Nuevo Perfil"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,24"/>

        <!-- Formulario -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Plataforma -->
                <ComboBox x:Name="PlataformaComboBox"
                         materialDesign:HintAssist.Hint="Plataforma *"
                         Style="{StaticResource MaterialDesignOutlinedComboBox}"
                         DisplayMemberPath="Nombre"
                         SelectionChanged="PlataformaComboBox_SelectionChanged"
                         Margin="0,0,0,16"/>

                <!-- Cuenta -->
                <ComboBox x:Name="CuentaComboBox"
                         materialDesign:HintAssist.Hint="Cuenta de Correo *"
                         Style="{StaticResource MaterialDesignOutlinedComboBox}"
                         DisplayMemberPath="Email"
                         SelectedValuePath="Id" 
                         Margin="0,0,0,16"
                         IsEnabled="False"/>

                <!-- Nombre del Perfil -->
                <TextBox x:Name="NombreTextBox"
                        materialDesign:HintAssist.Hint="Nombre del Perfil *"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Margin="0,0,0,16"
                        MaxLength="100"/>

                <!-- PIN -->
                <TextBox x:Name="PinTextBox"
                        materialDesign:HintAssist.Hint="PIN (opcional)"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Margin="0,0,0,16"
                        MaxLength="10"
                        PreviewTextInput="PinTextBox_PreviewTextInput"/>

                <TextBlock Text="ðŸ’¡ Algunos perfiles requieren PIN para acceder"
                          FontSize="12"
                          Opacity="0.7"
                          Margin="0,-12,0,16"/>

                <!-- Estado -->
                <ComboBox x:Name="EstadoComboBox"
                         materialDesign:HintAssist.Hint="Estado *"
                         Style="{StaticResource MaterialDesignOutlinedComboBox}"
                         Margin="0,0,0,16">
                    <ComboBoxItem Content="Disponible" Tag="disponible" IsSelected="True"/>
                    <ComboBoxItem Content="Ocupado" Tag="ocupado"/>
                </ComboBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Botones -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="CANCELAR"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Click="CancelarButton_Click"
                    Margin="0,0,8,0"/>
            <Button x:Name="GuardarButton"
                    Content="GUARDAR"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Click="GuardarButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
