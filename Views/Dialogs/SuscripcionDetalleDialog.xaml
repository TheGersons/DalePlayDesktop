<Window x:Class="StreamManager.Views.Dialogs.SuscripcionDetalleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Detalles de la Suscripción"
        Height="650"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0"
                                  Mode="PrimaryMid"
                                  Padding="24,16">
            <Grid>
                <StackPanel>
                    <TextBlock x:Name="ClienteTextBlock"
                              Text="Cliente"
                              FontSize="24"
                              FontWeight="Bold"/>
                    <TextBlock x:Name="PerfilTextBlock"
                              Text="Perfil - Plataforma"
                              FontSize="14"
                              Opacity="0.8"
                              Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Contenido -->
        <ScrollViewer Grid.Row="1"
                     VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24">
                <!-- Información de Suscripción -->
                <TextBlock Text="INFORMACIÓN DE SUSCRIPCIÓN"
                          FontWeight="SemiBold"
                          FontSize="16"
                          Margin="0,0,0,16"/>

                <materialDesign:Card Padding="16" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Plataforma -->
                        <materialDesign:PackIcon Grid.Row="0" Grid.Column="0"
                                                Kind="Television"
                                                Margin="0,0,16,12"
                                                VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,12">
                            <TextBlock Text="Plataforma" 
                                      FontSize="12" 
                                      Opacity="0.7"/>
                            <TextBlock x:Name="PlataformaTextBlock"
                                      Text="Netflix"
                                      FontSize="16"
                                      FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- Perfil -->
                        <materialDesign:PackIcon Grid.Row="1" Grid.Column="0"
                                                Kind="Account"
                                                Margin="0,0,16,12"
                                                VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,12">
                            <TextBlock Text="Perfil Asignado" 
                                      FontSize="12" 
                                      Opacity="0.7"/>
                            <TextBlock x:Name="PerfilDetalleTextBlock"
                                      Text="Perfil 1"
                                      FontSize="14"/>
                        </StackPanel>

                        <!-- Costo -->
                        <materialDesign:PackIcon Grid.Row="2" Grid.Column="0"
                                                Kind="CurrencyUsd"
                                                Margin="0,0,16,12"
                                                VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,12">
                            <TextBlock Text="Costo Mensual" 
                                      FontSize="12" 
                                      Opacity="0.7"/>
                            <TextBlock x:Name="CostoTextBlock"
                                      Text="L 62.50"
                                      FontSize="18"
                                      FontWeight="Bold"
                                      Foreground="{StaticResource PrimaryBrush}"/>
                        </StackPanel>

                        <!-- Fecha Inicio -->
                        <materialDesign:PackIcon Grid.Row="3" Grid.Column="0"
                                                Kind="CalendarStart"
                                                Margin="0,0,16,12"
                                                VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="3" Grid.Column="1" Margin="0,0,0,12">
                            <TextBlock Text="Fecha de Inicio" 
                                      FontSize="12" 
                                      Opacity="0.7"/>
                            <TextBlock x:Name="FechaInicioTextBlock"
                                      Text="01/01/2024"
                                      FontSize="14"/>
                        </StackPanel>

                        <!-- Estado -->
                        <materialDesign:PackIcon Grid.Row="4" Grid.Column="0"
                                                Kind="CheckCircle"
                                                Margin="0,0,16,0"
                                                VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="4" Grid.Column="1">
                            <TextBlock Text="Estado" 
                                      FontSize="12" 
                                      Opacity="0.7"/>
                            <Border x:Name="EstadoBorder"
                                   Background="#4CAF50"
                                   CornerRadius="12"
                                   Padding="12,4"
                                   HorizontalAlignment="Left"
                                   Margin="0,4,0,0">
                                <TextBlock x:Name="EstadoTextBlock"
                                          Text="Activa"
                                          Foreground="White"
                                          FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <!-- Información de Pagos -->
                <TextBlock Text="INFORMACIÓN DE PAGOS"
                          FontWeight="SemiBold"
                          FontSize="16"
                          Margin="0,8,0,16"/>

                <materialDesign:Card Padding="16" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Próximo Pago -->
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon Kind="CalendarAlert"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0"/>
                                <TextBlock Text="Próximo Pago" 
                                          FontSize="12" 
                                          Opacity="0.7"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock x:Name="ProximoPagoTextBlock"
                                      Text="01/02/2024"
                                      FontSize="16"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="DiasRestantesTextBlock"
                                      Text="En 15 días"
                                      FontSize="12"
                                      Opacity="0.7"
                                      Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Días de Servicio -->
                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon Kind="ClockOutline"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0"/>
                                <TextBlock Text="Tiempo de Servicio" 
                                          FontSize="12" 
                                          Opacity="0.7"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock x:Name="TiempoServicioTextBlock"
                                      Text="30 días"
                                      FontSize="16"
                                      FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <!-- Notas -->
                <TextBlock Text="NOTAS"
                          FontWeight="SemiBold"
                          FontSize="16"
                          Margin="0,8,0,16"/>

                <materialDesign:Card Padding="16">
                    <TextBlock x:Name="NotasTextBlock"
                              Text="Sin notas"
                              TextWrapping="Wrap"
                              Foreground="{DynamicResource MaterialDesignBody}"/>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>

        <!-- Botón Cerrar -->
        <Border Grid.Row="2"
               Background="{DynamicResource MaterialDesignDivider}"
               Height="1"
               VerticalAlignment="Top"/>
        
        <Button Grid.Row="2"
               Content="CERRAR"
               Style="{StaticResource MaterialDesignFlatButton}"
               Click="CerrarButton_Click"
               HorizontalAlignment="Right"
               Margin="16"/>
    </Grid>
</Window>
