<Window x:Class="StreamManager.Views.Dialogs.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Confirmar"
        Height="250"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        WindowStyle="None"
        AllowsTransparency="True">

    <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <materialDesign:ColorZone Grid.Row="0"
                                      Mode="PrimaryMid"
                                      Padding="16">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon x:Name="IconoPrincipal"
                                            Kind="AlertCircle"
                                            Width="32"
                                            Height="32"
                                            VerticalAlignment="Center"/>
                    <TextBlock x:Name="TituloTextBlock"
                              Text="Confirmar acción"
                              FontSize="20"
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"
                              Margin="16,0,0,0"/>
                </StackPanel>
            </materialDesign:ColorZone>

            <!-- Contenido -->
            <ScrollViewer Grid.Row="1"
                         VerticalScrollBarVisibility="Auto"
                         Padding="24"
                         Margin="0,16,0,16">
                <TextBlock x:Name="MensajeTextBlock"
                          Text="¿Estás seguro de realizar esta acción?"
                          TextWrapping="Wrap"
                          FontSize="16"
                          LineHeight="24"/>
            </ScrollViewer>

            <!-- Botones -->
            <Border Grid.Row="2"
                   Background="{DynamicResource MaterialDesignDivider}"
                   Height="1"
                   VerticalAlignment="Top"/>
            
            <StackPanel Grid.Row="2"
                       Orientation="Horizontal"
                       HorizontalAlignment="Right"
                       Margin="16">
                <Button x:Name="CancelarButton"
                       Content="CANCELAR"
                       Style="{StaticResource MaterialDesignFlatButton}"
                       Click="CancelarButton_Click"
                       Margin="0,0,8,0"
                       MinWidth="100"/>
                <Button x:Name="ConfirmarButton"
                       Content="CONFIRMAR"
                       Style="{StaticResource MaterialDesignRaisedButton}"
                       Click="ConfirmarButton_Click"
                       MinWidth="100"/>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</Window>
