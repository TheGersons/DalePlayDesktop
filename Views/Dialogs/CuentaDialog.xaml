<Window x:Class="StreamManager.Views.Dialogs.CuentaDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Cuenta de Correo"
        Height="600"
        Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Style="{StaticResource MaterialDesignWindow}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- T铆tulo -->
        <TextBlock x:Name="TituloTextBlock"
                   Text="Nueva Cuenta de Correo"
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Margin="0,0,0,24"/>

        <!-- Contenido con scroll -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Margin="0,0,0,16">
            <StackPanel>
                <!-- Secci贸n: Datos de la cuenta -->
                <materialDesign:Card Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Datos de la Cuenta"
                                  FontSize="16"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,16"/>

                        <!-- Plataforma -->
                        <ComboBox x:Name="PlataformaComboBox"
                                 materialDesign:HintAssist.Hint="Plataforma *"
                                 Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                 DisplayMemberPath="Nombre"
                                 Margin="0,0,0,16"/>

                        <!-- Correo -->
                        <TextBox x:Name="CorreoTextBox"
                                materialDesign:HintAssist.Hint="Correo electr贸nico *"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="0,0,0,16"/>

                        <!-- Contrase帽a -->
                        <TextBox x:Name="Contrase帽aTextBox"
                                materialDesign:HintAssist.Hint="Contrase帽a *"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="0,0,0,16"/>

                        <!-- Estado -->
                        <ComboBox x:Name="EstadoComboBox"
                                 materialDesign:HintAssist.Hint="Estado"
                                 Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                 SelectedIndex="0"
                                 Margin="0,0,0,16">
                            <ComboBoxItem Content="Activa" Tag="activo"/>
                            <ComboBoxItem Content="Inactiva" Tag="inactivo"/>
                        </ComboBox>

                        <!-- Notas -->
                        <TextBox x:Name="NotasTextBox"
                                materialDesign:HintAssist.Hint="Notas (opcional)"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                MinLines="2"
                                MaxLines="4"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Secci贸n: Pago a Plataforma -->
                <materialDesign:Card Padding="16">
                    <StackPanel>
                        <CheckBox x:Name="RegistrarPagoCheckBox"
                                 Content="Esta cuenta genera pago mensual a la plataforma"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,16"
                                 IsChecked="True"
                                 Checked="RegistrarPagoCheckBox_Checked"
                                 Unchecked="RegistrarPagoCheckBox_Unchecked"/>

                        <!-- Panel de datos de pago (visible por defecto) -->
                        <StackPanel x:Name="DatosPagoPanel">

                            <Border Background="#FFF3E0"
                                   CornerRadius="4"
                                   Padding="12"
                                   Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text=" Informaci贸n del Pago"
                                              FontWeight="SemiBold"
                                              Margin="0,0,0,4"/>
                                    <TextBlock Text="Define cu谩nto pagas mensualmente a la plataforma por esta cuenta"
                                              TextWrapping="Wrap"
                                              FontSize="12"
                                              Opacity="0.7"/>
                                </StackPanel>
                            </Border>

                            <!-- Monto mensual -->
                            <TextBox x:Name="MontoMensualTextBox"
                                    materialDesign:HintAssist.Hint="Monto mensual (L) *"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    PreviewTextInput="NumeroTextBox_PreviewTextInput"
                                    Margin="0,0,0,16"/>

                            <!-- Fecha de pr贸ximo pago -->
                            <DatePicker x:Name="FechaProximoPagoDatePicker"
                                       materialDesign:HintAssist.Hint="Fecha de pr贸ximo pago *"
                                       Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                       Margin="0,0,0,16"/>

                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>

        <!-- Botones -->
        <StackPanel Grid.Row="2"
                   Orientation="Horizontal"
                   HorizontalAlignment="Right">
            <Button x:Name="CancelarButton"
                   Content="CANCELAR"
                   Style="{StaticResource MaterialDesignFlatButton}"
                   Click="CancelarButton_Click"
                   Width="120"
                   Margin="0,0,12,0"/>

            <Button x:Name="GuardarButton"
                   Content="GUARDAR"
                   Style="{StaticResource MaterialDesignRaisedButton}"
                   Click="GuardarButton_Click"
                   Width="120"/>
        </StackPanel>
    </Grid>
</Window>
