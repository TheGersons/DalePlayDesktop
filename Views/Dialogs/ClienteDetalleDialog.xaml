<Window x:Class="StreamManager.Views.Dialogs.ClienteDetalleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Detalles del Cliente"
        Height="550"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0"
                                  Mode="PrimaryMid"
                                  Padding="24,16">
            <Grid>
                <StackPanel>
                    <TextBlock x:Name="NombreTextBlock"
                              Text="Nombre del Cliente"
                              FontSize="24"
                              FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Contenido -->
        <ScrollViewer Grid.Row="1"
                     VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24">
                <!-- Información Personal -->
                <TextBlock Text="INFORMACIÓN PERSONAL"
                          FontWeight="SemiBold"
                          FontSize="16"
                          Margin="0,0,0,16"/>

                <materialDesign:Card Padding="16" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Teléfono -->
                        <materialDesign:PackIcon Grid.Row="0" Grid.Column="0"
                                                Kind="Phone"
                                                Margin="0,0,16,12"
                                                VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,12">
                            <TextBlock Text="Teléfono" 
                                      FontSize="12" 
                                      Opacity="0.7"/>
                            <TextBlock x:Name="TelefonoTextBlock"
                                      Text="No especificado"
                                      FontSize="14"/>
                        </StackPanel>
                        
                        <!-- Fecha Registro -->
                        <materialDesign:PackIcon Grid.Row="1" Grid.Column="0"
                                                Kind="CalendarPlus"
                                                Margin="0,0,16,12"
                                                VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,12">
                            <TextBlock Text="Fecha de Registro" 
                                      FontSize="12" 
                                      Opacity="0.7"/>
                            <TextBlock x:Name="FechaRegistroTextBlock"
                                      Text="01/01/2024"
                                      FontSize="14"/>
                        </StackPanel>

                        <!-- Estado -->
                        <materialDesign:PackIcon Grid.Row="2" Grid.Column="0"
                                                Kind="CheckCircle"
                                                Margin="0,0,16,0"
                                                VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="2" Grid.Column="1">
                            <TextBlock Text="Estado" 
                                      FontSize="12" 
                                      Opacity="0.7"/>
                            <Border x:Name="EstadoBorder"
                                   Background="#4CAF50"
                                   CornerRadius="12"
                                   Padding="12,4"
                                   HorizontalAlignment="Left"
                                   Margin="0,4,0,0">
                                <TextBlock x:Name="EstadoTextBlock"
                                          Text="Activo"
                                          Foreground="White"
                                          FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <!-- Notas -->
                <TextBlock Text="NOTAS"
                          FontWeight="SemiBold"
                          FontSize="16"
                          Margin="0,8,0,16"/>

                <materialDesign:Card Padding="16">
                    <TextBlock x:Name="NotasTextBlock"
                              Text="Sin notas"
                              TextWrapping="Wrap"
                              Foreground="{DynamicResource MaterialDesignBody}"/>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>

        <!-- Botón Cerrar -->
        <Border Grid.Row="2"
               Background="{DynamicResource MaterialDesignDivider}"
               Height="1"
               VerticalAlignment="Top"/>
        
        <Button Grid.Row="2"
               Content="CERRAR"
               Style="{StaticResource MaterialDesignFlatButton}"
               Click="CerrarButton_Click"
               HorizontalAlignment="Right"
               Margin="16"/>
    </Grid>
</Window>
