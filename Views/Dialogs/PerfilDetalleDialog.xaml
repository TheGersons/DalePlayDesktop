<Window x:Class="StreamManager.Views.Dialogs.PerfilDetalleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Detalles del Perfil"
        Height="750"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0"
                                  Mode="PrimaryMid"
                                  Padding="24,16">
            <Grid>
                <StackPanel>
                    <TextBlock x:Name="PerfilNombreTextBlock"
                              Text="Nombre del Perfil"
                              FontSize="24"
                              FontWeight="Bold"/>
                    <TextBlock x:Name="PlataformaTextBlock"
                              Text="Plataforma"
                              FontSize="14"
                              Opacity="0.8"
                              Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Contenido -->
        <ScrollViewer Grid.Row="1"
                     VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24">
                <!-- Información del Perfil -->
                <TextBlock Text="INFORMACIÓN DEL PERFIL"
                          FontWeight="SemiBold"
                          FontSize="16"
                          Margin="0,0,0,16"/>

                <materialDesign:Card Padding="16" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Nombre -->
                        <materialDesign:PackIcon Grid.Row="0" Grid.Column="0"
                                                Kind="Account"
                                                Margin="0,0,16,12"
                                                VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,12">
                            <TextBlock Text="Nombre del Perfil" 
                                      FontSize="12" 
                                      Opacity="0.7"/>
                            <TextBlock x:Name="NombrePerfilTextBlock"
                                      Text="Perfil 1"
                                      FontSize="16"
                                      FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- Cuenta -->
                        <materialDesign:PackIcon Grid.Row="1" Grid.Column="0"
                                                Kind="Email"
                                                Margin="0,0,16,12"
                                                VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,12">
                            <TextBlock Text="Cuenta Asociada" 
                                      FontSize="12" 
                                      Opacity="0.7"/>
                            <TextBlock x:Name="CuentaAsociadaTextBlock"
                                      Text="cuenta@ejemplo.com"
                                      FontSize="14"/>
                        </StackPanel>

                        <!-- Estado -->
                        <materialDesign:PackIcon Grid.Row="2" Grid.Column="0"
                                                Kind="CheckCircle"
                                                Margin="0,0,16,0"
                                                VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="2" Grid.Column="1">
                            <TextBlock Text="Estado" 
                                      FontSize="12" 
                                      Opacity="0.7"/>
                            <Border x:Name="EstadoBorder"
                                   Background="#4CAF50"
                                   CornerRadius="12"
                                   Padding="12,4"
                                   HorizontalAlignment="Left"
                                   Margin="0,4,0,0">
                                <TextBlock x:Name="EstadoTextBlock"
                                          Text="disponible"
                                          Foreground="White"
                                          FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <!-- Cliente Asignado -->
                <TextBlock Text="CLIENTE ASIGNADO"
                          FontWeight="SemiBold"
                          FontSize="16"
                          Margin="0,8,0,16"/>

                <materialDesign:Card Padding="16" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Nombre del Cliente -->
                        <materialDesign:PackIcon Grid.Row="0" Grid.Column="0"
                                                Kind="AccountCircle"
                                                Margin="0,0,16,12"
                                                VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,12">
                            <TextBlock Text="Nombre del Cliente" 
                                      FontSize="12" 
                                      Opacity="0.7"/>
                            <TextBlock x:Name="ClienteNombreTextBlock"
                                      Text="Sin asignar"
                                      FontSize="16"
                                      FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- Teléfono -->
                        <materialDesign:PackIcon Grid.Row="1" Grid.Column="0"
                                                Kind="Phone"
                                                Margin="0,0,16,0"
                                                VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="1" Grid.Column="1">
                            <TextBlock Text="Teléfono" 
                                      FontSize="12" 
                                      Opacity="0.7"/>
                            <TextBlock x:Name="ClienteTelefonoTextBlock"
                                      Text="-"
                                      FontSize="14"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <!-- Credenciales de Acceso -->
                <TextBlock Text="CREDENCIALES DE ACCESO"
                          FontWeight="SemiBold"
                          FontSize="16"
                          Margin="0,8,0,16"/>

                <materialDesign:Card Padding="16" Margin="0,0,0,16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- PIN -->
                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:PackIcon Grid.Column="0"
                                                    Kind="ShieldKey"
                                                    Margin="0,0,16,0"
                                                    VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="PIN del Perfil" 
                                          FontSize="12" 
                                          Opacity="0.7"/>
                                <TextBlock x:Name="PinTextBlock"
                                          Text="••••"
                                          FontSize="14"
                                          FontWeight="SemiBold"
                                          Margin="0,4,0,0"/>
                            </StackPanel>
                            <Button Grid.Column="2"
                                   Style="{StaticResource MaterialDesignIconButton}"
                                   ToolTip="Copiar PIN"
                                   Click="CopiarPinButton_Click"
                                   VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="ContentCopy" Width="20" Height="20"/>
                            </Button>
                        </Grid>

                        <!-- Correo -->
                        <Grid Grid.Row="1" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:PackIcon Grid.Column="0"
                                                    Kind="EmailOutline"
                                                    Margin="0,0,16,0"
                                                    VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Correo Electrónico" 
                                          FontSize="12" 
                                          Opacity="0.7"/>
                                <TextBlock x:Name="CorreoTextBlock"
                                          Text="correo@ejemplo.com"
                                          FontSize="14"
                                          FontWeight="SemiBold"
                                          Margin="0,4,0,0"/>
                            </StackPanel>
                            <Button Grid.Column="2"
                                   Style="{StaticResource MaterialDesignIconButton}"
                                   ToolTip="Copiar correo"
                                   Click="CopiarCorreoButton_Click"
                                   VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="ContentCopy" Width="20" Height="20"/>
                            </Button>
                        </Grid>

                        <!-- Contraseña -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:PackIcon Grid.Column="0"
                                                    Kind="Key"
                                                    Margin="0,0,16,0"
                                                    VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Contraseña" 
                                          FontSize="12" 
                                          Opacity="0.7"/>
                                <TextBlock x:Name="ContrasenaTextBlock"
                                          Text="••••••••"
                                          FontSize="14"
                                          FontWeight="SemiBold"
                                          Margin="0,4,0,0"/>
                            </StackPanel>
                            <Button Grid.Column="2"
                                   Style="{StaticResource MaterialDesignIconButton}"
                                   ToolTip="Copiar contraseña"
                                   Click="CopiarContrasenaButton_Click"
                                   VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="ContentCopy" Width="20" Height="20"/>
                            </Button>
                        </Grid>
                    </Grid>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>

        <!-- Botón Cerrar -->
        <Border Grid.Row="2"
               Background="{DynamicResource MaterialDesignDivider}"
               Height="1"
               VerticalAlignment="Top"/>
        
        <Button Grid.Row="2"
               Content="CERRAR"
               Style="{StaticResource MaterialDesignFlatButton}"
               Click="CerrarButton_Click"
               HorizontalAlignment="Right"
               Margin="16"/>
    </Grid>
</Window>
