<Window x:Class="StreamManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:controls="clr-namespace:StreamManager.Views.Controls"
        Title="StreamManager - Sistema de Gestión"
        Height="850"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{DynamicResource MaterialDesignPaper}">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="MinHeight" Value="48"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2E2E3E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Black"/>
            <Setter Property="Foreground" Value="#626274"/>
            <Setter Property="Margin" Value="20,16,20,4"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#1E1E2E">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,24">
                    <materialDesign:PackIcon Kind="TelevisionPlay" Width="40" Height="40" 
                                            Foreground="#2196F3" HorizontalAlignment="Center"/>
                    <TextBlock Text="StreamManager" FontSize="20" FontWeight="Bold" 
                             Foreground="White" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    <TextBlock Text="SISTEMA DE CONTROL" FontSize="10" Foreground="#626274" 
                             HorizontalAlignment="Center" FontWeight="SemiBold"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,0,0,20">

                        <Button Tag="DashboardPage" Click="MenuButton_Click" Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ViewDashboard" Width="20" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Text="Dashboard" Margin="16,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <TextBlock Text="OPERACIONES" Style="{StaticResource SectionHeaderStyle}"/>

                        <Button Tag="PlataformasPage" Click="MenuButton_Click" Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="TelevisionClassic" Width="20" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Text="Plataformas" Margin="16,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Tag="CuentasPage" Click="MenuButton_Click" Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="EmailOutline" Width="20" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Text="Cuentas de correo" Margin="16,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Tag="PerfilesPage" Click="MenuButton_Click" Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountChild" Width="20" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Text="Perfiles" Margin="16,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <TextBlock Text="VENTAS" Style="{StaticResource SectionHeaderStyle}"/>

                        <Button Tag="ClientesPage" Click="MenuButton_Click" Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountGroup" Width="20" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Text="Clientes" Margin="16,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Tag="SuscripcionesPage" Click="MenuButton_Click" Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CalendarSync" Width="20" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Text="Suscripciones" Margin="16,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Tag="GestionPagosClientesPage" Click="MenuButton_Click" Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CashMultiple" Width="20" Height="20" VerticalAlignment="Center" Foreground="#4CAF50"/>
                                <TextBlock Text="Pagos Clientes" Margin="16,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <TextBlock Text="NEGOCIO" Style="{StaticResource SectionHeaderStyle}"/>

                        <Button Tag="PagosPlataformaPage" Click="MenuButton_Click" Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CreditCardSettings" Width="20" Height="20" VerticalAlignment="Center" Foreground="#FF5252"/>
                                <TextBlock Text="Pago a Proveedores" Margin="16,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="ReportesButton" Tag="ReportesPage" Click="MenuButton_Click" Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileChart" Width="20" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Text="Reportes y Métricas" Margin="16,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="HistorialPagosButton" Tag="PagosPage" Click="MenuButton_Click" Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="History" Width="20" Height="20" VerticalAlignment="Center" />
                                <TextBlock Text="Historial de Pagos" Margin="16,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <TextBlock Text="SISTEMA" Style="{StaticResource SectionHeaderStyle}"/>

                        <Button Tag="AlertasPage" Click="MenuButton_Click" Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="BellBadge" Width="20" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Text="Alertas Vencimiento" Margin="16,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="UsuariosButton" Tag="UsuariosPage" Click="MenuButton_Click" Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountGroup" Width="20" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Text="Usuarios" Margin="16,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="ConfiguracionButton" Tag="ConfiguracionPage" Click="MenuButton_Click" Style="{StaticResource MenuButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Cog" Width="20" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Text="Configuraciones" Margin="16,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <Border Grid.Row="2" Background="#181825" Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Width="35" Height="35" CornerRadius="18" Background="#2196F3">
                            <TextBlock x:Name="UserInitialTextBlock" Text="A" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                        </Border>

                        <StackPanel Grid.Column="1" Margin="12,0" VerticalAlignment="Center">
                            <TextBlock x:Name="UserNameTextBlock" Text="Admin" Foreground="White" FontSize="12" FontWeight="Bold"/>
                            <TextBlock x:Name="UserRolTextBlock" Text="En línea" Foreground="#4CAF50" FontSize="9"/>
                        </StackPanel>

                        <Button Grid.Column="2" Style="{StaticResource MaterialDesignIconButton}" Click="CerrarSesionButton_Click">
                            <materialDesign:PackIcon Kind="Logout" Foreground="#FF5252" Width="18" Height="18"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" Padding="24,12">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.1"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Breadcrumb -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="HomeOutline" Foreground="#626274" VerticalAlignment="Center"/>
                        <TextBlock x:Name="PageTitleTextBlock" Text="/ Dashboard" Margin="8,0,0,0" 
                                 VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#1E1E2E"/>
                    </StackPanel>

                    <!-- Badge de Alertas -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <controls:AlertasBadgeControl x:Name="AlertasBadge"
                                                     AlertasButtonClicked="AlertasBadge_AlertasButtonClicked"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Background="#F8F9FD"/>
        </Grid>
    </Grid>
</Window>
